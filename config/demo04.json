{
    "exp_name": "demo",
    "exp_id": "04",
    
    "model": {
        "type": "ST_GCNN_TorsoHeart",
        "args": {
            "num_filters": [
                1,
                16,
                32,
                64,
                128,
                256,
                1024
            ],
            "len_seq": [
                101,
                80,
                60,
                40,
                20
            ],
            "latent_f_dim": 32,
            "latent_s_dim": 20
        }
    },

    "data":{
        "data_set": "HeartDataLoader",
        "data_dir": "data/",
        "data_names": ["heart1"],
        "signal_type": "egm",
        "num_meshes": [568],
        "seq_len": 101,
        "graph_method": "bipartite",
        "num_workers": 1,
        "eval_tags": [
            "qry1",
            "qry2",
            "qry3",
            "qry4",
            "qry5"
        ]
    },

    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 5e-4,
            "amsgrad": false,
            "betas": [0.9, 0.999]
        }
    },
    "lr_scheduler": 0,

    "loss": "recon_loss",
    "metrics": [
        "mse", "tcc", "scc"
    ],

    "batch_size": 8,
    "load_torso": 1,
    "load_physics": 0,
    "device": 0,
    "training": {
        "epochs": 500,

        "save_period": 20,
        "signal_source": "torso",

        "monitor": "min valid_loss",
        "early_stop": 100,

        "torso_len": 120,

        "kl_args":{
            "min_annealing_factor": 0.0,
            "anneal_update": 1000,
            "elbo": "sum",
            "lambda": 1
        },
        "loss_to_plot": ["likelihood"]
    },
    "evaluating": {
        "signal_source": "torso",
        "torso_len": 120
    },
    
    "best_model": "m_best"
}
